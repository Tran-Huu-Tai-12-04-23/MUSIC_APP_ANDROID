<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.Material3.DayNight.NoActionBar">

<!--        <item name="android:statusBarColor">@color/bg_navigate</item>-->
        <item name="android:fontFamily">@font/gottham</item>
<!--        <item name="android:background">@color/bg_primary_light</item>-->
        <item name="android:textColor">@color/black</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

    </style>

<!--    light theme -->

    <style name="text_primary">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_second">
        <item name="android:textColor">@color/textSecondLight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_primary_bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="bg_primary">
        <item name="android:background">@color/bg_primary_light</item>
    </style>

    <style name="bg_second">
        <item name="android:background">@color/bg_navigate_light</item>
    </style>


<!--    input-->
    <style name="main_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/input_custom_light</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:ems">10</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn_second" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/black</item>
    </style>


    <color name="bg_navigate">#e5eefa</color>
    <color name="bg_primary">#fff</color>

    <color name="text_primary">#000</color>
    <color name="bg_second">#e5eefa</color>
    <color name="input_color">@color/tiny_black</color>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawer_page"
   >

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/navigate_main"
            app:headerLayout="@layout/header_navigate"
            app:menu="@menu/navigate_menu"
            app:itemRippleColor="@color/white"
            app:subheaderColor="@color/text_primary"
            android:layout_gravity="start"
            app:itemIconSize="30sp"
            style="@style/bg_second"
            app:itemIconPadding="10dp"
            app:itemVerticalPadding="10dp"
    >

        </com.google.android.material.navigation.NavigationView>

<!--    main-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_home"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/bg_primary"
            >



<!--            header-->
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                >
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/main_toolbar_frag"
                    android:name="fragment.mainApp.MainToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.Toolbar>


<!--            main app-->
            <!-- Note: A RecyclerView can also be used -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/bg_primary"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/content_home_page"
                    android:name="fragment.mainApp.ContentHomePage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.fragment.app.FragmentContainerView>


            </androidx.core.widget.NestedScrollView>

<!--            floating player/-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:background="@color/bg_second"
                android:id="@+id/floating_player"
                android:clickable="true"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/thumbnails_playlist"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="Test des"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_artist_avatar"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
                    android:outlineSpotShadowColor="@color/text_primary"
                    android:clickable="true"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Lời yêu thật..."
                    style="@style/text_primary_bold"
                    android:textAlignment="textStart"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />
                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:layout_width="wrap_content"
                    android:src="@drawable/baseline_play_circle_24"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:background="@color/transparent"
                    android:text="Button"
                    android:paddingRight="20dp"
                    />
                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:layout_width="wrap_content"
                    android:src="@drawable/baseline_skip_next_24"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:background="@color/transparent"
                    android:text="Button"

                    />
            </LinearLayout>
<!--            bottom Bar-->

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/bottom_menu"
                    app:compatShadowEnabled="true"
                    app:itemBackground="@color/bg_navigate"
                    ></com.google.android.material.bottomnavigation.BottomNavigationView>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/tiny_black"
        android:id="@+id/loading_home"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:trackColor="@color/purple_200"
            app:indicatorColor="@color/text_primary"
            android:outlineSpotShadowColor="@color/main_bottom_app_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>

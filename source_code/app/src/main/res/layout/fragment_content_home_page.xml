<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.mainApp.ContentHomePage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.recyclerview.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/carousel_music_container"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge"
                app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"
                >

            </androidx.recyclerview.widget.RecyclerView>
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView1"
                android:name="fragment.mainApp.PlaylistSuggest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView2"
                android:name="fragment.mainApp.RecentMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView3"
                android:name="fragment.mainApp.NewMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView4"
                android:name="fragment.mainApp.ArtistFamous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
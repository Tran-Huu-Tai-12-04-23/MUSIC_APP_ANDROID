<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/Widget.Material3.BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/bg_primary"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="10dp"
            >
            <TextView
                android:textSize="16sp"
                android:textColor="@color/icon_primary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/comment_title"
                >

            </TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close_comment"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:icon="@drawable/baseline_close_24"
                app:iconSize="30dp"
                app:strokeColor="@color/bg_primary"
                app:strokeWidth="0dp"
                app:iconTint="@color/icon_second"
                />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/container_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="@color/input_color"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:strokeColor="@color/bg_primary"
            app:strokeWidth="0dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_view_thumbnails"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_person_24"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:hint=""
                    android:outlineSpotShadowColor="@color/transparent"
                    app:boxBackgroundColor="@color/transparent"
                    app:boxStrokeColor="@color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:endIconMode="clear_text"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
                    app:strokeWidth="0dp"
                    tools:targetApi="p"
                    >
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_comment"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:icon="@drawable/baseline_send_24"
                    app:iconSize="24sp"
                    app:iconTint="@color/icon_primary"
                    app:strokeColor="@color/transparent"
                    app:strokeWidth="0dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</FrameLayout>

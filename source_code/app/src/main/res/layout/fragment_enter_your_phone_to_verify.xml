<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.ForgotPassword.EnterYourPhoneToVerify"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:gravity="center_horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:maxWidth="40dp"
            android:src="@drawable/app_icon"
            />

        <TextView
            android:textColor="@color/text_primary"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_your_password_by_your_phone_number"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="@color/textSecond"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="@string/we_will_send_you_a_code_via_sms_to_confirm_your_phone_number"
            android:textSize="14sp"
            android:textStyle="bold"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+84" />

           <com.google.android.material.textfield.TextInputEditText
               android:layout_width="0dp"
               android:id="@+id/input_phone_number"
               android:layout_weight="1"
               android:inputType="phone"
               android:layout_height="match_parent"
               app:endIconMode="clear_text"
               android:paddingLeft="10dp"
               android:textSize="14sp"
               />

        </LinearLayout>

        <Button
            android:id="@+id/btn_next_step"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:text="@string/next"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/icon_primary"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/transparent"
            android:layout_marginTop="10dp"
            android:text="@string/go_back"
            android:textSize="16sp"
            android:textColor="@color/icon_primary"
           />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_primary">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_custom_primary</item>
        <!-- Thêm các thuộc tính tùy chỉnh khác tại đây -->
    </style>

    <style name="loadingDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="toast_error">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/error</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/bg_error</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">0dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/icon_error</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">10dp</item>
    </style>

    <style name="toast_warn">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/warn</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/bg_warn</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">0dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/icon_warn</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">10dp</item>
    </style>

    <style name="toast_success">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/success</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/bg_success</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">0dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/icon_success</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">10dp</item>
    </style>
    <style name="avatar_rounded">
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">20dp</item>
    </style>


<!--    light theme -->
    <style name="SearchView" parent="android:Widget">
        <item name="enforceMaterialTheme">true</item>
        <item name="android:elevation">@dimen/m3_searchview_elevation</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchView</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.SearchView</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Search</item>
        <item name="android:background">@color/bg_primary</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/from_top</item>
        <item name="android:windowExitAnimation">@anim/from_bottom</item>
    </style>

</resources>
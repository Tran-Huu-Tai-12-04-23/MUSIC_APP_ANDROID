<!-- shadow_shape.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
<!--            <solid android:color="#000" /> &lt;!&ndash; Background color of the shadow &ndash;&gt;-->
        </shape>
    </item>
    <item android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <solid android:color="#ccc" /> <!-- Background color of the shape -->
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>
</layer-list>

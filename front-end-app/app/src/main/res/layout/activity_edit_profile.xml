<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.User.EditProfile"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bg_primary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconSize="30dp"
            app:strokeColor="@color/bg_primary"
            app:strokeWidth="0dp"
            app:iconTint="@color/text_primary"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/icon_primary"
            android:text="Chỉnh sửa thông tin cá nhân"
            android:textAlignment="center"
            android:translationX="-20px"
            />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_avatar"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:icon="@drawable/camera_svgrepo_com"
                app:iconSize="24sp"
                app:strokeColor="@color/icon_primary"
                app:strokeWidth="1dp"
                android:text="Thay đổi ảnh đại diện"
                app:iconTint="@color/icon_second"
                android:layout_marginTop="10dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:endIconMode="clear_text"
                    android:layout_marginTop="32dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_full_name"
                        style="@style/main_input_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Tên dầy đủ"
                        android:inputType="text"
                        android:paddingStart="24dp"
                        android:backgroundTint="@color/input_color"
                        android:text=""
                        android:textSize="14sp"
                        tools:ignore="Deprecated,RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:endIconMode="clear_text"
                    android:layout_marginTop="32dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_address"
                        style="@style/main_input_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/input_color"
                        android:ems="10"
                        android:hint="Địa chỉ"
                        android:inputType="text"
                        android:paddingStart="24dp"
                        android:text=""
                        android:textSize="14sp"
                        tools:ignore="Deprecated,RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    style="@style/main_input_style"
                    android:id="@+id/btn_select_date"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:icon="@drawable/date_range_svgrepo_com"
                    app:iconSize="24sp"
                    app:strokeColor="@color/icon_primary"
                    app:strokeWidth="1dp"
                    android:text="Chọn ngày"
                    app:backgroundTint="@color/input_color"
                    app:iconTint="@color/icon_second"
                    android:layout_marginTop="20dp"
                    android:textAlignment="textStart"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_des"
                        style="@style/main_input_style"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:hint="Mô tả"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:paddingStart="24dp"
                        android:backgroundTint="@color/input_color"
                        android:text=""
                        android:textSize="14sp"
                        tools:ignore="Deprecated,RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:icon="@drawable/save_svgrepo_com"
                    app:iconSize="24sp"
                    app:strokeColor="@color/icon_primary"
                    app:strokeWidth="0dp"
                    android:text="Lưu lại"
                    android:textColor="@color/white"
                    app:iconTint="@color/white"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/bg_success"
                    />
            </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
</LinearLayout>
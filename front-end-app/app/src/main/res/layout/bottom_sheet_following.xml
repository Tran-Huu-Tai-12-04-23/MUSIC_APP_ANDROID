<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:padding="20dp"
    android:id="@+id/bottom_sheet_following"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/test_artist_avatar"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            android:id="@+id/avatar"
            />

        <TextView
            style="@style/text_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quan AP"
            android:layout_marginLeft="10dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/name"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_third"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_unfollow"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/unfollow"
        app:icon="@drawable/baseline_close_24"
        app:iconSize="30dp"
        app:strokeColor="@color/bg_primary"
        app:strokeWidth="0dp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:iconTint="@color/icon_primary"
        app:rippleColor="@color/rip_btn_primary"
        android:textAlignment="textStart"
        />



</LinearLayout>
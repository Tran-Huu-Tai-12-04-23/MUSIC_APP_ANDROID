<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/confirm_remove_title"
        android:lineSpacingExtra="@dimen/cardview_compat_inset_shadow"
        style="@style/text_header"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/name_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Chúng ta của hiện tại"
        style="@style/text_second"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?android:attr/textColorSecondary" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:gravity="center"
       >

       <com.google.android.material.button.MaterialButton
           android:id="@+id/btn_confirm"
           style="@style/Widget.Material3.Button.OutlinedButton.Icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:text="@string/cancel"
           android:background="@color/bg_red"
           app:strokeColor="@color/bg_primary"
           app:strokeWidth="0dp"
           app:iconTint="@color/text_primary"
           android:layout_marginEnd="10dp"

           />

       <com.google.android.material.button.MaterialButton
           android:id="@+id/btn_cancel"
           style="@style/Widget.Material3.Button.OutlinedButton.Icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:text="@string/confirm_remove"
           android:backgroundTint="@color/bg_red"
           app:strokeColor="@color/bg_primary"
           app:strokeWidth="0dp"
           android:textStyle="bold"
           android:layout_marginStart="10dp"
           app:iconTint="@color/white"
           android:textColor="@color/white"
           />
   </LinearLayout>

</LinearLayout>
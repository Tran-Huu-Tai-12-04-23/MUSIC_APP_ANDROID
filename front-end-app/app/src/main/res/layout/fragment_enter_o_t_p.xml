<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.ForgotPassword.EnterOTP"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:padding="24dp"
        android:gravity="center_horizontal"
        >
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="40dp"
            android:src="@drawable/two_factor_authentication_pana"
            />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_otp_to_change_password"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
         />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                app:strokeColor="@color/transparent"
                android:layout_margin="6dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:nextFocusForward="@+id/number_2"
                    android:id="@+id/number_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/input_color"
                    android:inputType="number"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                app:strokeColor="@color/transparent"
                android:layout_margin="6dp"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/input_color"
                    android:inputType="number"
                    android:nextFocusForward="@+id/number_3"
                    android:id="@+id/number_2"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                app:strokeColor="@color/transparent"
                android:layout_margin="6dp"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/input_color"
                    android:inputType="number"
                    android:nextFocusForward="@+id/number_4"
                    android:id="@+id/number_3"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                app:strokeColor="@color/transparent"
                android:layout_margin="6dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/input_color"
                    android:inputType="number"
                    android:id="@+id/number_4"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                app:strokeColor="@color/transparent"
                android:layout_margin="6dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/input_color"
                    android:inputType="number"
                    android:id="@+id/number_5"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                app:strokeColor="@color/transparent"
                android:layout_margin="6dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/input_color"
                    android:inputType="number"
                    android:id="@+id/number_6"
                    android:gravity="center"
                    android:textAlignment="center"
                    />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <Button
            android:id="@+id/btn_verify_otp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:text="@string/verify"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="@color/btn_primary"

         />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_resend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resend"
                    android:textColor="@color/icon_primary"
                    app:backgroundTint="@color/transparent" />
                <TextView
                    android:id="@+id/second_code_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" OTP in 60 seconds"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
       </LinearLayout>

</FrameLayout>